<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/y"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WORDS"

            android:id="@+id/books"
            android:background="@drawable/word"
            android:onClick="bookClick"
            android:textSize="30dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/articles"
            android:layout_alignEnd="@+id/articles" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRONOUNCIATION"
            android:id="@+id/articles"
            android:onClick="articleClick"
            android:background="@drawable/pronoun"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



</RelativeLayout>
